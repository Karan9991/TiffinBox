<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/message_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingBottom="@dimen/cardview_default_elevation"
    android:paddingLeft="@dimen/cardview_default_elevation"
    android:paddingRight="@dimen/cardview_default_elevation"
    android:paddingTop="@dimen/cardview_default_elevation">
    <RelativeLayout
        android:id="@+id/icon_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgRecipe"
            android:focusable="false"

            android:layout_width="70dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="71dp"
            android:elevation="7dp"
            android:src="@drawable/ic_photo_camera_black_24dp"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="2dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvSellerTitle"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="75dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="5dp"
            android:elevation="2dp"
            app:cardCornerRadius="@dimen/loginCardRadius"
            app:cardPreventCornerOverlap="false">
            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tvName"
                    style="@style/modifiedEditText"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:width="20dp"
                    android:layout_marginBottom="30dp"
                    android:hint="@string/titleSeller"
                    android:inputType="text"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:text="Welocome to IO"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="15dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvTest"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tvAddress"
                    style="@style/modifiedEditText"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:width="20dp"
                    android:hint="@string/titleSeller"
                    android:inputType="text"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:text="Welocome to IO"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="15dp"
                    android:textStyle="bold" />
                       </LinearLayout>
        </androidx.cardview.widget.CardView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rightarrowViewimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:focusable="false"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="83dp"
            android:layout_marginEnd="41dp"
            android:elevation="7dp"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:background="@drawable/login_button_bk"
            app:civ_border_color="@color/whiteCardColor"
            app:civ_border_width="2dp" />
        <!--                </androidx.cardview.widget.CardView>-->

    </RelativeLayout>

</LinearLayout>